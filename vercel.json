{
  "framework": "nextjs",
  "regions": ["iad1", "sfo1"],
  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "btcfi-api.vercel.app" }],
      "destination": "https://btcfi.aiindigo.com/$1",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/cron/health",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/whales",
      "schedule": "*/15 * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "X-Powered-By", "value": "BTCFi API" }
      ]
    },
    {
      "source": "/.well-known/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, s-maxage=3600" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ]
}
